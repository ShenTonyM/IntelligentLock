<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/text_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView2"
        android:layout_marginStart="47dp"
        android:text="Device Number"
        android:textColor="#707070"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/edit_account"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_from"
        android:layout_centerHorizontal="true"
        android:hint="At the back of product" />

    <TextView
        android:id="@+id/text_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/text_from"
        android:layout_marginTop="226dp"
        android:text="Nickname"
        android:textColor="#707070"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_to"
        android:layout_centerHorizontal="true"
        android:hint="Who are you"

        android:inputType="textPassword" />

    <Button
        android:id="@+id/button_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:text="Continue"
        android:textColor="#455a64"
        android:textSize="16sp" />

    <!--<Button-->
        <!--android:id="@+id/button_4"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Forget Password"-->
        <!--android:textSize="15sp"-->
        <!--android:textColor="#000000"-->
        <!--android:layout_marginTop="12sp"-->
        <!--android:layout_below="@+id/button_3"-->
        <!--android:layout_centerHorizontal="true" />-->

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        app:srcCompat="@drawable/标题1" />

</RelativeLayout>